<configuration>
    <!-- ConsoleAppender for logging output to the console -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger to log at INFO level and direct logs to STDOUT -->
    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>